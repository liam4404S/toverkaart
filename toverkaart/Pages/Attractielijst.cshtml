@page
@model AttractielijstModel
@{
    ViewData["Title"] = "Attractielijst";
}

<form method="post">
    <input asp-for="AttractieNaam" class="inlogContentsSize" placeholder="Attractie naam" />
    <button type="submit" asp-page-handler="Search" class="buttonDesignInlog">search</button>
</form>
<body>
    <section id="attractielijst">
        @if (Model.GevondenAttracties.Any())
        {
            @foreach (var attractie in Model.GevondenAttracties)
            {
                <div class="attractielijstItem attractieContainer">
                    <div class="attractieText">
                        <a>@attractie.Naam</a>
                        <p>
                            <!-- Replace with your description or data for each attractie -->
                            Example description for @attractie.Naam.
                        </p>

                        <p><strong>Tijdsduur:</strong> @attractie.TijdsduurSec seconden</p>
                        <p><strong>Status:</strong> @(attractie.Status ? "Open" : "Gesloten")</p>
                        <p><strong>Gebied:</strong> @(attractie.AttractieGebied != null ? attractie.AttractieGebied.Naam : "Onbekend")</p>
                    </div>
                    <div class="attractieImage">
                        <img src="https://placehold.co/200">
                    </div>
                </div>
            }
        }
        else if (!string.IsNullOrEmpty(Model.AttractieNaam))
        {
            <p>Geen attractie gevonden met de naam "@Model.AttractieNaam".</p>
        }
    </section>
</body>

